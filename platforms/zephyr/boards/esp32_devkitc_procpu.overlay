&spi3 {
    status = "okay";

     /* ESP32 typically uses HSPI = spi2, VSPI = spi3 */
    pinctrl-0 = <&spim3_default>;  /* Must include CS signal */
    pinctrl-names = "default";
    cs-gpios = <&gpio0 5 GPIO_ACTIVE_LOW>;

	sdcard_spi: sdhc@0 {
		compatible = "zephyr,sdhc-spi-slot";
		reg = <0>;
		status = "okay";
		spi-max-frequency = <24000000>;
		mmc {
			compatible = "zephyr,sdmmc-disk";
            disk-name = "SD";
			status = "okay";
		};
	};
};
